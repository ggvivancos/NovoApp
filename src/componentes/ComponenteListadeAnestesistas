import React from 'react';
import { View, Text, StyleSheet, FlatList } from 'react-native';

interface Anestesista {
    id: number;
    posicao: number;
    nome: string;
}

interface ComponenteListaDeAnestesistasProps {
    anestesistas: Anestesista[];
}

const ComponenteListaDeAnestesistas: React.FC<ComponenteListaDeAnestesistasProps> = ({ anestesistas }) => {
    return (
        <FlatList 
            data={anestesistas}
            keyExtractor={item => String(item.id)}
            renderItem={({ item }) => (
                <View style={styles.item}>
                    <Text style={styles.text}>{item.posicao}</Text>
                    <Text style={styles.text}>{item.nome}</Text>
                </View>
            )}
        />
    );
};

const styles = StyleSheet.create({
    item: {
        flexDirection: 'row',
        justifyContent: 'space-between',
        paddingHorizontal: 10,
        paddingVertical: 5,
        borderBottomWidth: 1,
        borderColor: '#ddd'
    },
    text: {
        fontSize: 16
    }
});

export default ComponenteListaDeAnestesistas;

